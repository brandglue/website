// only used for typechecking
// actual transpilation is handled by Babel

{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,

    // transpilation options
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "es7"],
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",

    // typechecking options
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,

    // path resolution
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@icons/*": ["src/icons/*"],
      "@images/*": ["src/images/*"],
      "@layout/*": ["src/layout/*"],
      "@models/*": ["src/models/*"],
      "@pages/*": ["src/pages/*"],
      "@partials/*": ["src/partials/*"],
      "@src/*": ["src/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
