{
  "name": "brandglue-website",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/brandglue/website",
  "scripts": {
    "analyze": "react-static build --analyze",
    "build": "react-static build",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --fix && stylelint '*/**/*.tsx'",
    "stage": "react-static build --staging",
    "start": "react-static start",
    "serve": "serve dist -p 3000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint"
    ]
  },
  "dependencies": {
    "@reach/router": "1.2.1",
    "classnames": "2.2.6",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-hot-loader": "4.12.18",
    "react-is": "16.12.0",
    "react-lazy-load-image-component": "1.4.0",
    "react-static": "7.2.3",
    "react-static-plugin-reach-router": "7.2.3",
    "react-static-plugin-sitemap": "7.2.3",
    "react-static-plugin-styled-components": "7.2.2",
    "styled-components": "^5.0.0-rc.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@types/classnames": "2.2.9",
    "@types/node": "13.1.2",
    "@types/reach__router": "1.2.6",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-hot-loader": "4.1.1",
    "@types/react-lazy-load-image-component": "1.3.0",
    "@types/styled-components": "4.4.1",
    "@types/webpack-env": "1.14.1",
    "@typescript-eslint/eslint-plugin": "2.14.0",
    "@typescript-eslint/parser": "2.14.0",
    "babel-plugin-styled-components": "1.10.6",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "husky": "3.1.0",
    "image-webpack-loader": "6.0.0",
    "lint-staged": "9.5.0",
    "lqip-loader": "2.2.0",
    "prettier": "1.19.1",
    "react-static-plugin-typescript": "7.2.3",
    "responsive-loader": "1.2.0",
    "serve": "11.3.0",
    "sharp": "0.23.4",
    "stylelint": "12.0.1",
    "stylelint-config-prettier": "8.0.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.9.0",
    "typescript": "3.7.4",
    "webpack": "4.41.5",
    "webpack-dev-server": "3.10.1"
  }
}
