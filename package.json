{
  "name": "brandglue-website",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/brandglue/website",
  "scripts": {
    "build": "gatsby build",
    "check-format": "npm run prettier --list-different",
    "check-types": "tsc",
    "clean": "gatsby clean",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "develop": "gatsby develop",
    "format": "npm run prettier --write",
    "lint": "eslint --ignore-path .gitignore '*/**/*.{js,ts,tsx}' --fix && stylelint '*/**/*.tsx'",
    "pretest:e2e:ci": "npm run build",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node-modules/jest/bin/jest.js --runInBand --watch",
    "test:e2e": "is-ci \"test:e2e:ci\" \"test:e2e:dev\"",
    "test:e2e:ci": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test start http://localhost:3000 cy:open",
    "validate": "npm run check-types && npm run check-format && npm run lint && npm run build && npm run test:coverage && npm run test:e2e:ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "*.tsx": [
      "stylelint"
    ],
    "**/*.+(js|json|ts|tsx|yml)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "classnames": "2.2.6",
    "fluid-system": "1.0.9",
    "gatsby": "2.22.13",
    "gatsby-image": "2.4.5",
    "netlify-cms-app": "2.12.13",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "6.0.0",
    "styled-components": "5.1.1",
    "styled-reset": "4.1.5",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.10.1",
    "@cypress/webpack-preprocessor": "5.4.1",
    "@testing-library/cypress": "6.0.0",
    "@types/classnames": "2.2.10",
    "@types/node": "14.0.6",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "6.0.0",
    "@types/styled-components": "5.1.0",
    "@types/styled-system": "5.1.9",
    "@types/styled-system__css": "5.0.11",
    "@types/testing-library__cypress": "5.0.5",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "babel-plugin-styled-components": "1.10.7",
    "babel-preset-gatsby": "0.4.7",
    "cypress": "4.7.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "gatsby-plugin-netlify-cms": "4.3.3",
    "gatsby-plugin-react-helmet": "3.3.2",
    "gatsby-plugin-root-import": "2.0.5",
    "gatsby-plugin-sharp": "2.6.9",
    "gatsby-plugin-styled-components": "3.3.2",
    "gatsby-plugin-typescript": "2.4.3",
    "gatsby-source-filesystem": "2.3.8",
    "gatsby-transformer-sharp": "2.5.3",
    "husky": "4.2.5",
    "is-ci": "2.0.0",
    "jest": "26.0.1",
    "lint-staged": "10.2.7",
    "prettier": "2.0.5",
    "start-server-and-test": "1.11.0",
    "stylelint": "13.5.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "test-data-bot": "0.8.0",
    "ts-loader": "7.0.5",
    "typescript": "3.9.3",
    "webpack": "4.43.0"
  }
}
